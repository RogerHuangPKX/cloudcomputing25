{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist", // Optional: specify output directory for compiled files
    "rootDir": "." // Optional: specify root directory of source files
  },
  "include": [
    "**/*.ts" // Include all .ts files in the project
  ],
  "exclude": [
    "node_modules"
  ]
}
